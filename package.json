  "license": "MIT",
  "keywords": [
    "ds18b20",
    "1wire",
    "temperature"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crycode-de/ioBroker.ds18b20"
  },
  "os": [
    "linux"
  ],
  "dependencies": {
    "@iobroker/adapter-core": "^3.1.4",
    "autobind-decorator": "^2.4.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.6.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.6.0",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@alcalzone/release-script-plugin-manual-review": "^3.5.9",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.17.6",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.47.0",
    "eslint-plugin-html": "^7.1.0",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.4.0"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "build-adapter ts && npm run build:remote-client-setup",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "build:remote-client-setup": "node build-remote-client-setup.js",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter -b admin/i18n/en.json",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/crycode-de/ioBroker.ds18b20/issues"
  },
  "readmeFilename": "README.md",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "io-package.json",
    "LICENSE"
  ]
}
